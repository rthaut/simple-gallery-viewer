{
    "supported_browsers": {
      "firefox": {
        "protocol": "moz-extension://"
      },
      "chrome": {
        "protocol": "chrome-extension://"
      },
      "edge": {
        "protocol": "ms-browser-extension://"
      }
    },
    "vendor_files": [
      "./node_modules/jquery/dist/jquery.min.js",
      "./node_modules/shoelace-css/dist/shoelace.js",
      "./node_modules/webextension-polyfill/dist/browser-polyfill.min.js"
    ],
    "plugin_options": {
      "uglify": {
        "compress": {
          "drop_console": true
        },
        "mangle": true
      }
    },
    "source_folders": {
      "css": "./src/css",
      "helpers": "./src/helpers",
      "images": "./src/images",
      "locales": "./src/_locales",
      "manifests": "./src/manifests",
      "pages": "./src/pages",
      "scripts": "./src/scripts"
    }
  }